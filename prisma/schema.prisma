generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  name         String
  email        String         @unique
  password     String
  files        Files[]
  createdAt    DateTime       @default(now())
  PastInsights PastInsights[]
}

model Files {
  id           Int            @id @default(autoincrement())
  fileName     String
  fileURL      String
  fileSize     Float
  userId       Int
  user         User           @relation(fields: [userId], references: [id])
  createdAt    DateTime       @default(now())
  PastInsights PastInsights[]

  @@index([userId])
}

model PastInsights {
  id        Int      @id @default(autoincrement())
  insights  Json
  userId    Int
  fileId    Int 
  user      User     @relation(fields: [userId], references: [id])
  files     Files    @relation(fields: [fileId], references: [id])
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([fileId])
}


